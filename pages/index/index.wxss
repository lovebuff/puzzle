page{background-color: #fff;}
#myCanvas{position: absolute;top: -100vh;left: 0;z-index: -1;}
.quency{width: 100%;height: 80rpx;line-height: 80rpx;text-align: center;color: #0081ff;font-size: 32rpx;font-weight: 700;}
.puzzle_index{background-color: #d7f0db;width: calc(var(--board_width--) + 10px);height: calc(var(--board_width--) + 10px);
margin: 50rpx calc((100% - (var(--board_width--) + 10px)) / 2) 0;border-radius: 10rpx;border: 5px solid rgba(26, 26, 26, 0.8);
position: relative;}
.puzzle_index>view{width: var(--piece_width--);height: var(--piece_width--);border-radius: 8rpx;overflow: hidden;
position: absolute;left: 0;top: 0;transition: all 0.5s;margin: 10rpx 0 0 10rpx;}
.puzzle_index>view>view{width: 100%;height: 100%;font-size: 28rpx;background: #39b54a;display: flex;align-items: center;
position: absolute;justify-content: center;color:#fff;}
.puzzle_index>view>image{width: 100%;height: 100%;}
button{background-color:#e54d42;margin-top: 50rpx;color: #fff;}
